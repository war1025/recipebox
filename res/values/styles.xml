<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Heading">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:background">@color/background_colored</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/background_light</item>
		<item name="android:textSize">24sp</item>
		<item name="android:padding">8dip</item>
	</style>

	<style name="Heading.Dialog">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="List">
		<item name="android:divider">@color/item_divider</item>
		<item name="android:dividerHeight">1dip</item>
	</style>
</resources>

