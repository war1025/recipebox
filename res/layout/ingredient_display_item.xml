<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dip"
    >
<TextView
	android:id="@+id/ingredient_amount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Child"
    android:textSize="18sp"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:paddingRight="3dip"
    android:paddingLeft="10dip"
    />

<TextView
	android:id="@+id/ingredient_unit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Child"
    android:textSize="18sp"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:paddingRight="10dip"
    android:paddingLeft="0dip"
    android:layout_toRightOf="@id/ingredient_amount"
    android:layout_alignBottom="@id/ingredient_amount"
    />
<TextView
	android:id="@+id/ingredient_name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Child"
    android:textSize="18sp"
    android:padding="10dip"
    android:layout_toRightOf="@id/ingredient_unit"
    android:layout_alignBottom="@id/ingredient_unit"
    />
</RelativeLayout>
